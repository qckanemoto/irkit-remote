{
  "dependencies": {
    "jquery": "^2.1.4",
    "react": "^0.14.2",
    "react-addons-css-transition-group": "^0.14.2",
    "react-dom": "^0.14.2"
  },
  "devDependencies": {
    "babel-preset-react": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "envify": "^3.4.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "browserify": "browserify ./src/app.js -o ./public/app.js -t [ babelify --presets [ react ] ]",
